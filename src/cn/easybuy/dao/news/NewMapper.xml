<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.easybuy.dao.news.NewMapper">
<!--增加新闻 -->
	<insert id="add" parameterType="News">
		insert into easybuy_news(title,content,createTime)
		values(#{title},#{content},#{createTime})
	</insert>
<!-- 修改新闻 -->
	<update id="update" parameterType="News">
		update set easybuy_news 
		<trim suffix="where id=#{id}">
			<if test="title">title=#{title}</if>
			<if test="content">content=#{content}</if>
			<if test="createTime">createTime=#{createTime}</if>
		</trim>
	</update>
<!-- 删除新闻 -->
	<delete id="deleteById" parameterType="Integer">
		delete from easybuy_news where id=#{id}
	</delete>
<!-- 查询新闻 -->
	<select id="getNewsById" resultType="News" parameterType="Integer">
		select * from easybuy_news where id=#{id}
	</select>
<!-- 查询新闻列表 -->
	<select id="queryNewsList" resultType="News" parameterType="News">
		select * from easybuy_news where 1=1
	</select>
<!-- 查询新闻数目 -->
	<select id="queryNewscount" resultType="int">
			select count(*) from easybuy_news where 1=1
	</select>
</mapper>